{
    "manifest_version" : 2,

    "name": "Wikireadier",
    "description" : "This extension improves the readability of Wikipedia.",
    "version" : "0.0.0.3",

    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },

    "browser_action" : {
        "default_icon": "icon.png",
        "default_title": "Make page more readable"
    },

    "permissions" : [
        "activeTab"
    ]
}
